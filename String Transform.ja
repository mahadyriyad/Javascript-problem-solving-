function main(input) {
    let result = '';
    for (let i = 0; i < input.length; i++) {
        if ((i + 1) % 3 === 0 && /[a-zA-Z]/.test(input[i])) {
            result += input[i].toUpperCase();
        } else {
            result += input[i];
        }
    }
    console.log(result);
}

let input = "";
process.stdin.on('data', chunk => input += chunk);
process.stdin.on('end', () => main(input.trim()));
